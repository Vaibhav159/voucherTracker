  display: flex;
  align-items: center;
  justify-content: center;
  padding: 10px;
}

.sheet-logo img {
  width: 100%;
  height: 100%;
  object-fit: contain;
}

.sheet-title-col {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 4px;
}

.sheet-title-col h3 {
  margin: 0;
  color: white;
  font-size: 1.1rem;
  font-weight: 700;
}

.current-live-badge {
  display: inline-flex;
  align-items: center;
  gap: 6px;
  background: rgba(34, 197, 94, 0.2);
  color: #4ade80;
  font-size: 0.75rem;
  font-weight: 700;
  padding: 2px 8px;
  border-radius: 100px;
  width: fit-content;
}

.current-live-badge .dot {
  width: 6px;
  height: 6px;
  background: #4ade80;
  border-radius: 50%;
}

.sheet-savings-col {
  display: flex;
  flex-direction: column;
  align-items: flex-end;
}

.sheet-savings-col .label {
  font-size: 0.7rem;
  color: #94a3b8;
  text-transform: uppercase;
  font-weight: 600;
}

.sheet-savings-col .value {
  font-size: 1.5rem;
  font-weight: 800;
  color: #22c55e;
  line-height: 1.1;
}

.sheet-savings-col .off-text {
  font-size: 0.9rem;
  font-weight: 700;
  color: #22c55e;
